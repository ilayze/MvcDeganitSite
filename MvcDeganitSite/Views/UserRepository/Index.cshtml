@model IEnumerable<MvcDeganitSite.Models.Recipe>

@{
    ViewBag.Title = " כל המתכונים של" + ViewBag.CurrentUser;
}

<h2>המתכונים של @ViewBag.CurrentUser</h2>

<table class="MainTbl" >
        <tr>
        @{
        int cnt = 0;
        foreach (var item in Model)
        {
            if (cnt++ % 5 == 0)
            {
                @: </tr><tr>
            }
            @:<td align="center" >
               <strong>  @item.Name</strong> <br />
                @item.Description <br />
                <a href="@item.Url" target="_blank"><img src="../../Content/recipesPictures/@item.PictureName" alt="" height="150px" width="200" />  </a>
             string currentUser = ViewBag.CurrentUser;
            @Html.ActionLink("הורד מהמאגר של " + currentUser, "DeleteFromRepository", new { id = item.RecipeID });                                                 
           @: </td>
       
                                                                 
        }
        @:</tr>
        @: <br />
    


    }
    </table>
